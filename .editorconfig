# .editorconfig
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
max_line_length = 120

[*.json]
indent_size = 4

[*.yml]
indent_size = 4

[*.yaml]
indent_size = 4

[*.toml]
indent_size = 4

[*.sh]
indent_size = 4

[*.md]
trim_trailing_whitespace = false  # allows trailing whitespace in markdown formatting
